<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layoutAnimation="@anim/layout_animation"
    android:id="@+id/card"
    android:layout_gravity="center"
    android:layout_height="320dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/product_gradient1"
        android:padding="8dp"
        android:src="@drawable/static_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:text="One piece mango"
        android:textSize="14sp">

    </TextView>

    <TextView
        android:id="@+id/discountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Just â‚¹10"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/discount"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_below="@id/title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/btn_border1"
        android:drawableLeft="@drawable/ic_discount"
        android:gravity="center"
        android:padding="4dp"
        android:text="20% off"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_below="@id/discountPrice"
        android:layout_marginStart="8dp"
        android:text="@string/cutPrice"
        android:textSize="12sp" />


</RelativeLayout>
