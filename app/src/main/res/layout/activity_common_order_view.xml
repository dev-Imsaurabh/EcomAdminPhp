<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientArea.ManageOrders.CommonOrderViewActivity">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:paddingStart="8dp"
            android:text="Order ID: ORD1223445667443"
            android:textColor="@color/green"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/amount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:textSize="10sp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/btn_border2"
            android:gravity="center"
            android:padding="8dp"
            android:text="To pay : â‚¹10"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/amount_txt"
            android:layout_marginTop="8dp"
            android:background="#E8E6E6" />

        <TextView
            android:id="@+id/paymentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderId"
            android:layout_marginTop="8sp"
            android:paddingStart="8dp"
            android:text=""
            android:textColor="@color/green"
            android:textSize="12sp" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_below="@id/rl"
        android:layout_height="match_parent"
        android:id="@+id/manageOrder_recycler"/>

</RelativeLayout>